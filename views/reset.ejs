<% include ../partials/header.ejs %>

<div class="bgImageWrapper resetImage">
        <!-- <span class="close">&times;</span> -->
    <div class="container">
           
        <div id="regButton" class="element green"> 
            <a   href="/users/login" class="button green align-left">Login</a> 
        </div>
     
        <div id="formCard" class="card  align-left" >
            <form id="formElement" class="element" action="/reset/<%= token %>" method="POST"> <!-- token is passed -->
                <p><% include ../partials/messages.ejs %></p>
                <p class="title1  align-left">New Password</p>
                <p class="smallText">Have An Account? <a class="smallText" href="/users/login">Login</a></p> 
                <input class="formInput" type ="password" id="password"name="password"  placeholder="Create Password" value="" required title="Any Uppercase/Lowercase letters & numbers, between 6-10 characters - no special characters" pattern="[A-Za-z\d]{6,10}"/><br>
                <input class="formInput" type="password" id="confirm" name="confirm"  placeholder="Confirm Password" value="" required pattern="[A-Za-z\d]{6,10}"/><br> <!-- required pattern for form protection -->
                <input class="formInput submit medText" type="submit" value="submit">   
            </form>
        </div>    

    </div> <!--------- end container ------------------------------------------------------------>
</div> <!----------- end wrapper ---------------------------------------------------------->
  
<% include ../partials/footer.ejs %>