<% include ../partials/header.ejs %>

<div class="bgImageWrapper regImage">
        
    <div class="container">

        <!--  redirects to login -->
        <div id="regButton" class="element green">
            <a   href="/users/login" class="button green align-left">Login</a>
        </div>
        
        <!-- registration form -->
        <div id="formCard" class="card  align-left" > 
            <form id="formElement" class="element" action="/users/register" method="POST">
                <p><% include ../partials/messages.ejs %></p>
                <p class="title1  align-left">Register</p>
                <p class="smallText">Have An Account? <a class="smallText" href="/users/login">Login</a></p> 
                <input class="formInput" type="name" id="name" name="name" placeholder="Your Username...." title="Username must be alphanumeric and 5 to 15 characters long." required pattern="[a-zA-Z0-9_-]{5,15}"/><br>
                <input class="formInput" type="email" id="email" name="email" placeholder="Your Email...."  /><br>
                <input class="formInput" type ="password" id="password"name="password"  placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" required title="Any Uppercase/Lowercase letters & numbers, between 6-10 characters - no special characters" pattern="[A-Za-z\d]{6,10}"/><br>
                <input class="formInput" type="password" id="password2" name="password2"  placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required pattern="[A-Za-z\d]{6,10}"/><br> <!-- required pattern for form protection -->
                <input class="formInput submit medText" type="submit" value="submit">   
            </form>
        </div>    

    </div> <!--------- end container ------------------------------------------------------------>

</div> <!----------- end wrapper ---------------------------------------------------------->
  
<% include ../partials/footer.ejs %>